<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DetailActivity">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       src>

    <androidx.cardview.widget.CardView
        android:id="@+id/rectangle_5"
        android:layout_width="395dp"
        android:layout_height="299dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="79dp"
        android:background="@drawable/rectangle_5"
        android:elevation="25dp">


        <View
            android:id="@+id/rectangle_8"
            android:layout_width="96dp"
            android:layout_height="87dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="22dp"
            android:background="@drawable/rectangle_8" />

        <View
            android:id="@+id/rectangle_7"
            android:layout_width="176dp"
            android:layout_height="55dp"
            android:layout_marginLeft="164dp"
            android:layout_marginTop="143dp"
            android:background="@drawable/rectangle_7" />

        <Button
            android:id="@+id/follow_btn"
            android:layout_width="242dp"
            android:layout_height="44dp"
            android:layout_marginLeft="76dp"
            android:layout_marginTop="227dp"
            android:text="@string/follow"
            android:textAppearance="@style/follow"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/following_3"
            android:layout_width="45dp"
            android:layout_height="36dp"
            android:layout_marginLeft="287dp"
            android:layout_marginTop="150dp"
            android:gravity="top"
            android:lineSpacingExtra="0sp"
            android:text="@string/following"
            android:textAppearance="@style/following_3" />

        <TextView
            android:id="@+id/followers_1"
            android:layout_width="45dp"
            android:layout_height="35dp"
            android:layout_marginLeft="235dp"
            android:layout_marginTop="150dp"
            android:gravity="top"
            android:lineSpacingExtra="0sp"
            android:text="@string/followers"
            android:textAppearance="@style/followers_1" />

        <TextView
            android:id="@+id/repository_"
            android:layout_width="51dp"
            android:layout_height="40dp"
            android:layout_marginLeft="171dp"
            android:layout_marginTop="150dp"
            android:gravity="top"
            android:lineSpacingExtra="0sp"
            android:text="Repository"
            android:textAppearance="@style/repository_" />

        <TextView
            android:id="@+id/jawed_karim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="135dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="21dp"
            android:lineSpacingExtra="0sp"
            android:text="Jawed Karim\n\nCo-Founder of Youtube\n\nAmerica "
            android:textAppearance="@style/jawed_karim" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />


    </androidx.cardview.widget.CardView>

   </RelativeLayout>

</ScrollView>